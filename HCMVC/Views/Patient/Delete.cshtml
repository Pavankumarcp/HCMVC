@model PatientViewModel
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete - Form Details</h1>
<div class="row">
    <div class="col-md-5">
        <ul class="list-group">
            <li class="list-group-item"><b>FirstName :</b> @Model.FirstName</li>
            <li class="list-group-item"><b>LastName :</b>@Model.LastName</li>
            <li class="list-group-item"><b>Age :</b>@Model.Age</li>
            <li class="list-group-item"><b>DoctorSpecialization :</b>@Model.Spec</li>
            <li class="list-group-item"><b>SlotDate :</b>@Model.SlotDate</li>
            <li class="list-group-item"><b>MobileNo :</b>@Model.MobileNo</li>


        </ul>
        <div>
            Are sure do you want to delete this data?
        </div>
        <div>
            <form asp-controller="Patient" asp-action="Delete" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
        <a asp-controller="Patient" asp-action="PatientDetails">Back to List</a>
    </div>
</div>