@model PatientViewModel
@{
    ViewData["Title"] = "Create";
}

<h1 style="color:aliceblue;font-weight:bold;"> Create a New Admission</h1>
<style>
    .container {
        border: 1px solid;
    }
</style>

<body class="container" style="background-image: linear-gradient(rgba(1,1,1,0.4),rgba(3,9,20,0.7)),url(https://images.unsplash.com/photo-1614620026694-f5f38182ab9f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTF8fGxpYnJhcnklMjBiYWNrZ3JvdW5kfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60);color:aliceblue;font-weight:bold;">
    <form asp-controller="Patient" asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="mb-2">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input type="text" asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="LastName" class="form-label"></label>
                    <input type="text" asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Age" class="form-label"></label>
                    <input type="text" asp-for="Age" class="form-control" />

                    <span asp-validation-for="Age"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Spec" class="form-label"></label>
                    <input type="text" asp-for="Spec" class="form-control" />
                    <span asp-validation-for="Spec"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="SlotDate" class="form-label"></label>
                    <input type="date" asp-for="SlotDate" class="form-control" />
                    <span asp-validation-for="SlotDate"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="MobileNo" class="form-label"></label>
                    <input type="text" asp-for="MobileNo" class="form-control" />
                    <span asp-validation-for="MobileNo"></span>
                </div>
                <div class="mt-2 d-grid">
                    <input type="submit" class="btn btn-primary" value="Add New" />
                </div>
            </div>
        </div>
    </form>
    <a asp-controller="Patient" asp-action="PatientDetails">Back to Home</a>
</body>