@model DoctorViewModel
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete - Form Details</h1>
<div class="row">
    <div class="col-md-5">
        <ul class="list-group">
            <li class="list-group-item"><b>DoctorName :</b> @Model.DoctorName</li>
            <li class="list-group-item"><b>Specialization :</b>@Model.Specialization</li>
        </ul>
        <div>
            Are sure do you want to delete this data?
        </div>
        <div>
            <form asp-controller="Doctor" asp-action="Delete" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
        <a asp-controller="DoctorViewModel" asp-action="DoctorDetails">Back to List</a>
    </div>
</div>